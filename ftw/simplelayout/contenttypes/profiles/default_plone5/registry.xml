<?xml version="1.0"?>
<registry>
  <records interface="Products.CMFPlone.interfaces.controlpanel.IImagingSchema"
           prefix="plone">
    <value key="allowed_sizes" purge="false">
      <element>simplelayout_galleryblock 480:480</element>
      <element>sl_galleryblock_4k 3840:2160</element>
      <element>sl_textblock_small 480:480</element>
      <element>sl_textblock_middle 800:800</element>
      <element>sl_textblock_large 1280:1280</element>
    </value>
  </records>

  <records interface="Products.CMFPlone.interfaces.controlpanel.ISearchSchema"
           prefix="plone">
    <value key="types_not_searched" purge="false">
      <element>ftw.simplelayout.TextBlock</element>
      <element>ftw.simplelayout.FileListingBlock</element>
      <element>ftw.simplelayout.VideoBlock</element>
      <element>ftw.simplelayout.GalleryBlock</element>
    </value>
  </records>

  <records interface="Products.CMFPlone.interfaces.controlpanel.ITypesSchema"
           prefix="plone">
    <value key="default_page_types" purge="false">
      <element>ftw.simplelayout.ContentPage</element>
    </value>
  </records>

  <records interface="Products.CMFPlone.interfaces.controlpanel.ITinyMCESchema"
           prefix="plone">
    <value key="contains_objects" purge="false">
      <element>ftw.simplelayout.ContentPage</element>
      <element>ftw.simplelayout.FileListingBlock</element>
      <element>ftw.simplelayout.GalleryBlock</element>
    </value>
  </records>

  <record name="plone.displayed_types">
    <value purge="false">
      <element>ftw.simplelayout.ContentPage</element>
    </value>
  </record>

  <records prefix="plone.resources/ftw-simplelayout-videoblock"
           interface='Products.CMFPlone.interfaces.IResourceRegistry'>
    <value key="js">++resource++ftw.simplelayout/videoblock.js</value>
    <value key="deps">jquery</value>
  </records>

  <records prefix="plone.bundles/ftw-simplelayout-contenttype"
           interface='Products.CMFPlone.interfaces.IBundleRegistry'>
    <value key="resources">
      <element>ftw-simplelayout-videoblock</element>
    </value>
    <value key="enabled">True</value>
    <value key="depends">ftw-simplelayout</value>
    <value key="compile">False</value>
    <value key="jscompilation">++plone++ftw.simplelayout/simplelayout-contenttype-compiled.js</value>
  </records>

</registry>
