<html xmlns:metal="http://xml.zope.org/namespaces/metal"
      xmlns:tal="http://xml.zope.org/namespaces/tal"
      metal:use-macro="context/main_template/macros/master"
      xmlns:i18n="http://xml.zope.org/namespaces/i18n"
      i18n:domain="ftw.simplelayout">


    <div metal:fill-slot="content-core">

      <div id="simplelayout" class="sl-simplelayout" tal:attributes="data-sl-settings view/get_sl_settings">
        <div class="sl-layout"
             tal:repeat="row view/rows"
             tal:attributes="class row/class">
          <div class="sl-column"
               tal:repeat="col row/cols"
               tal:attributes="class col/class">
            <div class="sl-block"
                 tal:repeat="block col/blocks"
                 tal:attributes="data-type block/type;
                                 data-uid block/uid">
              <div class="sl-block-content"
                  tal:content="structure block/obj_html">Block Content</div>
              </div>
            </div>
          </div>
        </div>
    </div>
</html>
